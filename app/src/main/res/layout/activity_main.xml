<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jon_2.wumpushunter.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wumpus Hunter!!!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/startButton"
        android:onClick="startGame"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/nameField"
        android:layout_marginBottom="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameField"
        android:hint="Enter Name"
        android:layout_centerVertical="true"
        android:imeOptions="actionSend"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertexSpinner"
        android:entries="@array/Vertexes"
        android:layout_below="@+id/nameField"
        android:layout_toEndOf="@+id/textView_Connection" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connectionSpinner"
        android:entries="@array/Connections"
        android:layout_above="@+id/startButton"
        android:layout_toEndOf="@+id/textView_Vertex" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vertexes:"
        android:id="@+id/textView_Vertex"
        android:layout_alignBottom="@+id/vertexSpinner"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_toStartOf="@+id/textView"
        android:layout_below="@+id/nameField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connections:"
        android:id="@+id/textView_Connection"
        android:textSize="20dp"
        android:layout_alignTop="@+id/connectionSpinner"
        android:layout_alignParentStart="true" /><![CDATA[









    "
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />




]]>
</RelativeLayout>
